#!/bin/bash

# UI
export UI_GAPS=15

# COLORS
export COLOR_PRIMARY="#6da0e8"
export COLOR_PRIMARY_INACTIVE="#4c6d9c"
export COLOR_SECONDARY="#FFFFFF"
export COLOR_SECONDARY_INACTIVE="#CCCCCC"
export COLOR_ALERT="#ff0000"

# POLYBAR
export POLY_MOUNT_STRING="%{F$COLOR_SECONDARY}%mountpoint% %{F-}%percentage_used%%"
export POLY_NETWORK_STRING="%{F$COLOR_SECONDARY} %{F-}%downspeed% %{F$COLOR_SECONDARY} %{F-}%upspeed%"
export POLY_DATE_STRING="%{F-}%H%{F$COLOR_SECONDARY}:%{F-}%M"
export POLY_DATE_ALT_STRING="$POLY_DATE_STRING%{F$COLOR_SECONDARY}:%{F-}%S %d%{F$COLOR_SECONDARY}/%{F-}%m%{F$COLOR_SECONDARY}/%{F-}%Y"
